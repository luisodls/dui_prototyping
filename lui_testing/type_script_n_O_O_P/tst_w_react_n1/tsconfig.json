{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs", // Essential for Webpack/ts-loader
    "jsx": "react-jsx",   // Use the modern JSX transform
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["index.tsx"]
}
